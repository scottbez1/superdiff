<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="DiffViewTheme" parent="AppTheme">
        <item name="android:colorBackground">@color/diff_line_normal_background</item>
        <item name="android:windowBackground">@color/diff_line_normal_background</item>
    </style>
    
    <style name="DiffLineBase">
        <item name="android:textColor">@color/diff_foreground</item>
        <item name="android:maxLines">1</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">@dimen/code_text_size</item>
    </style>
    
    <style name="DiffLineNumber" parent="DiffLineBase">
        <item name="android:background">@color/diff_line_number_background</item>
        <item name="android:textColor">@color/diff_line_number_foreground</item>
        <item name="android:gravity">end</item>
    </style>
    
    <style name="DiffLine" parent="DiffLineBase">
        <item name="android:ellipsize">none</item>
    </style>

</resources>
